<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controladores.PrincipalController">
    <!-- Sorteo -->
    <Button text="Realizar Sorteo" onAction="#onSortear"/>
    <ListView fx:id="listaGrupos" prefHeight="200"/>

    <!-- Fase de Grupos -->
    <Button text="Simular Fase de Grupos" onAction="#simularFaseGrupos"/>
    <ListView fx:id="listaResultadosGrupos" prefHeight="300"/>

    <!-- Fase Final -->
    <Button text="Simular Fase Final" onAction="#simularFaseFinal"/>
    <ListView fx:id="listaResultadosFinal" prefHeight="300"/>
</VBox>